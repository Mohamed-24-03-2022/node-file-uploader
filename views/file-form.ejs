<%- include('./layout/home-header') %>

<form method="POST" action="/files" enctype="multipart/form-data" class="new-file-form">
  <select name="folderSelect" required>
    <option value="">Select a folder</option>
    <% locals.currentUser.folders.forEach(folder => { %>
    <option value="<%= folder.id %>"><%= folder.name %></option>
    <% }); %>
  </select>
  <div>
    <input type="file" id="fileUpload" name="fileUpload" placeholder="File Name" required />
    <div class="text-block">Max file sie is 2MB</div>
  </div>
  <button>Add</button>
</form>

<%- include('./layout/home-footer') %>
