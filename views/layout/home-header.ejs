<!DOCTYPE html>
<html>
  <head>
    <title>MoDrive</title>
    <link rel="shortcut icon" href="images/logo.webp" type="image/x-icon" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <div class="container">
      <aside class="sidebar">
        <div class="logo">
          <!-- Generated By Chatgpt -->
          <img src="/images/logo.webp" alt="MoDrive-logo" />
          <h1>MoDrive</h1>
        </div>
        <nav class="nav">
          <ul>
            <li>
              <a href="/" class="active"> <i class="fas fa-folder"></i> Home</a>
            </li>

            <% for( let i = 0; i < locals.currentUser.folders.length; i++ ) { %>
            <li class="folder-item active">
              <a
                href="/folders/<%=locals.currentUser.folders[i].id %>/files"
                class="folder-shortcut"
              >
                <i class="fas fa-folder"></i>
                <%= locals.currentUser.folders[i].name %>
              </a>
              <a href="/folders/delete/<%=locals.currentUser.folders[i].id %>" class="delete">
                x
              </a>
            </li>
            <% } %>

            <li>
              <a href="/files" class="upload"><i class="fas fa-file"></i>Upload file</a>
            </li>
            <li>
              <a href="/folders" class="new-folder"
                ><i class="fas fa-folder-plus"></i> New folder</a
              >
            </li>
          </ul>
        </nav>

        <div class="sign-out">
          <form action="/signout" method="POST">
            <button type="submit"><i class="icon-sign-out"></i> Sign Out</button>
          </form>
        </div>
      </aside>
      <main class="content">
        <div class="header">
          <input type="text" placeholder="Shopping list, bahamas..." />
          <button>Search</button>
        </div>
