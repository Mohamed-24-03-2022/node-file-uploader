<%- include('./layout/home-header') %>

<div class="confirmation-popup" id="confirmationPopup" style="display: none">
  <p>Are you sure you want to delete this file?</p>
  <div class="confirmation-buttons">
    <button class="btn close-btn" id="closePopupBtn">&times;</button>
    <button class="btn delete-btn" id="confirmDeleteBtn">Delete</button>
  </div>
</div>

<div class="file-detail">
  <h1>File Details</h1>
  <div class="file-info">
    <p><strong>Name:</strong> <%= file.name %></p>
    <p><strong>Uploaded At:</strong> <%= new Date(file.uploadedAt).toLocaleString() %></p>
    <p><strong>Size:</strong> <%= (file.size / 1048576).toFixed(2) %> MB</p>
    <p><strong>Folder:</strong> <%= file.folder.name %></p>
    <div class="file-actions">
      <!--  -->
      <a
        href="<%= file.url %>"
        style="text-decoration: none; color: white"
        class="btn-download"
        target="_blank"
        download="<%=file.name %>"
        >Download</a
      >
      <!--  -->
      <form action="<%= file.id %>" method="POST" class="delete-form">
        <button type="submit" class="btn-delete">Delete File</button>
      </form>
    </div>
  </div>
</div>

<%- include('./layout/home-footer') %>
